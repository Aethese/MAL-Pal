{
	"manifest_version": 3,
	"name": "MAL Pal",
	"description": "Your Pal on MAL that gives you more helpful info!",
	"version": "0.5.2",
	"permissions": [
		"storage"
	],
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"action": {
	  "default_popup": "popup/popup.html"
	},
	"content_scripts": [
		{
			"js": ["scripts/profile.js"],
			"matches": ["https://myanimelist.net/profile/*"]
		},
		{
			"js": ["scripts/pages.js"],
			"matches": ["https://myanimelist.net/anime/*", "https://myanimelist.net/manga/*"]
		}
	]
}